<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pronounceWordLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PronounceThisWord"
    android:background="@color/md_theme_surfaceVariant">

    <ImageView
        android:id="@+id/wall"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical|center_horizontal"
        android:src="@drawable/wall_design" />


    <ImageView
        android:id="@+id/wall2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical|center_horizontal"
        android:src="@drawable/wall_design" />
    <ImageView
        android:id="@+id/ball"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_vertical|start"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="12dp"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/speakButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="25dp"
        android:src="@drawable/microphone_icon"
        android:contentDescription="@string/speak_description"
        android:backgroundTint="#FFFFFF"
        android:scaleType="centerInside"
        app:maxImageSize="40dp"/>

    <TextView
        android:id="@+id/speechStatus"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pronounce_text"
        android:textSize="25sp"
        android:paddingTop="5dp"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="85dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/replay"
        android:layout_gravity="bottom|start"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="25dp"/>
    <nl.dionsegijn.konfetti.xml.KonfettiView
        android:id="@+id/viewKonfetti"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"/>
    <TextView
        android:id="@+id/scoreview"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:textAlignment="center"
        android:layout_marginTop="50dp"
        android:text=""
        android:textSize="30sp"
        android:textColor="@color/black"
        android:layout_gravity="top|center"/>
</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_menu_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/md_theme_background"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="223dp"
        android:layout_height="228dp"
        android:layout_marginBottom="20dp"
        app:srcCompat="@drawable/duowingo" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="218dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="DuoWingo"
        android:fontFamily="@font/gilbert_bold"
        android:textColor="@color/md_theme_onBackground"
        android:textSize="36sp"/>

    <!-- Main Menu Buttons -->
    <Button
        android:id="@+id/wordJumpFragment"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Word Jump"
        android:textColor="@color/md_theme_onPrimary"
        android:backgroundTint="@color/md_theme_primary"/>

    <Button
        android:id="@+id/pronounceWordFragment"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Pronounce This Word"
        android:layout_marginBottom="20dp"
        android:textColor="@color/md_theme_onPrimary"
        android:backgroundTint="@color/md_theme_primary"/>

    <Button
        android:id="@+id/profileFragment"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:textColor="@color/md_theme_onPrimary"
        android:backgroundTint="@color/md_theme_tertiary"/>

    <!-- Fragment Container -->


    <FrameLayout
        android:id="@+id/flFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />


</LinearLayout>
